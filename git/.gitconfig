[user]
    name = Michal Domonkos
    email = mdomonko@redhat.com
[color]
    ui = true
# Use bold color variants for better readability on black terminal
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green bold
    changed = red bold
    untracked = red bold
    unmerged = red bold
[core]
    editor = vim
    # Stow ignores .gitignore files so using a different name
    excludesfile = ~/.gitign
[alias]
    ci = commit --verbose
    ca = commit --amend
    st = status -s
    lg = log --oneline --graph
    co = checkout
    br = branch
    pu = push
    a = add
    au = add -u
    ap = add -p
    d = diff
    ds = diff --staged
    stl = stash list
    ctags = !git ls-files | ctags \
        --tag-relative -L - -f"$(git rev-parse --show-toplevel)/tags" \
        --python-kinds=-i
    rc = rebase --continue
    ra = rebase --abort
