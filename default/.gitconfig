[user]
    name = Michal Domonkos
    email = mdomonko@redhat.com
[color]
    ui = true
# Use bright color variants for better readability on dark terminal
[color "diff"]
    meta = 11
    frag = 13
    old = 9
    new = 10
[color "status"]
    added = 10
    changed = 9
    untracked = 9
    unmerged = 9
[core]
    editor = vim
    # Stow ignores .gitignore files so using a different name
    excludesfile = ~/.gitign
[alias]
    ci = commit --verbose
    ca = commit --amend
    st = status -s
    lg = log --oneline --graph
    co = checkout
    br = branch
    pu = push
    a = add
    au = add -u
    ap = add -p
    d = diff
    ds = diff --staged
    stl = stash list
    rc = rebase --continue
    ra = rebase --abort
[merge]
    tool = vimdiff
